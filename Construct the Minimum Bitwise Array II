class Solution:
    def minBitwiseArray(self, nums: List[int]) -> List[int]:
        ans = []
        
        for x in nums:
            if x % 2 == 0:
                ans.append(-1)
                continue
            for bit in range(1, 32):
                if (((x >> bit) & 1) ^ 1) == 1:
                    a = x ^ (1 << (bit - 1))
                    ans.append(a)
                    break
        return ans
